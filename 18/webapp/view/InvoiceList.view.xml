<mvc:View
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <List
      headerText="{i18n>invoiceListTitle}"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{invoice>/Invoices}" >//绝对路径
      <items>
         <ObjectListItem
            title="{invoice>Quantity} x {invoice>ProductName}"/>//相对路径
      </items>
   </List>
</mvc:View>